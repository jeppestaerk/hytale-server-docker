# Hytale Server Docker Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# JVM CONFIGURATION
# =============================================================================

# Minimum heap size (recommended: at least 2G)
JAVA_MIN_HEAP=2G

# Maximum heap size (recommended: 4G+ depending on player count and view distance)
JAVA_MAX_HEAP=4G

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 5520, uses UDP/QUIC protocol)
SERVER_PORT=5520

# Authentication mode: "authenticated" or "offline"
# Use "authenticated" for production servers
# Use "offline" for local testing only
AUTH_MODE=authenticated

# Enable AOT cache for faster server startup (requires HytaleServer.aot file)
USE_AOT_CACHE=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Enable automatic backups
ENABLE_BACKUP=true

# Backup frequency in minutes
BACKUP_FREQUENCY=60

# =============================================================================
# AUTO-DOWNLOAD CONFIGURATION
# =============================================================================

# URL to download hytale-downloader from (downloaded at startup if not present)
HYTALE_DOWNLOADER_URL=https://downloader.hytale.com/hytale-downloader.zip

# Automatically check for updates on startup
AUTO_UPDATE=false

# Patchline: "release" or "pre-release"
PATCHLINE=release

# Path to credentials file for non-interactive authentication
# Leave empty to use the default path (/opt/hytale/config/credentials.json)
# Or specify a custom path inside the container
CREDENTIALS_PATH=

# Skip hytale-downloader update check
SKIP_DOWNLOADER_UPDATE_CHECK=false

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================

# Disable Sentry crash reporting (recommended during plugin development)
DISABLE_SENTRY=false

# Additional server arguments (see: java -jar HytaleServer.jar --help)
EXTRA_ARGS=

# =============================================================================
# DOCKER RESOURCE LIMITS
# =============================================================================

# Maximum memory the container can use
MEMORY_LIMIT=6G

# Reserved memory for the container
MEMORY_RESERVATION=4G
